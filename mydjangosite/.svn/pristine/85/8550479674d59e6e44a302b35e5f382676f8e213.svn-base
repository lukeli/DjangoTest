{% extends "./photoGallery/base.html" %}

{% block title %}Item List{% endblock %}

{% block content %}

<p><a href="{% url 'index' %}">&laquo; Back to Photo Gallery Main Page</a></p>

<h2>Items</h2>
{% if item_list %}
<table>
    <tr>
        <th>Name</th>
        <th>Sample Thumb</th>
        <th>Description</th>
        <th>Number of Photos</th>
    </tr>
    {% for item in item_list %}
    <tr>
        <td><i>{{ item.name }}</i></td>
        <td>
            {% if item.photo_set.count %}
            <a href="{{ item.get_absolute_url }}">
                <img src="{{ item.photo_set.all.0.image.thumb_url }}" />
            </a>
            {% else %}
            (No photos currently uploaded)
            {% endif %}
        </td>
        <td>{{ item.description }}</td>
        <td> {{item.photo_set.count }} <span/> Photos </td>
    </tr>
    {% endfor %}
</table>
{% else %}
<p>There are currently no items to display.</p>
{% endif %}

{% endblock %}
